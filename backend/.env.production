# Production Environment Variables for Render
# Copy these to Render Dashboard â†’ Environment Variables

NODE_ENV=production
PORT=10000

# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# JWT Configuration (Generate new secret for production!)
JWT_SECRET=GENERATE_NEW_SECURE_RANDOM_SECRET_HERE
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Device Token Configuration
DEVICE_TOKEN_SALT_ROUNDS=10
DEVICE_TOKEN_EXPIRES_DAYS=365

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
RATE_LIMIT_DEVICE_MAX=300

# CORS Configuration (Add your frontend URL)
CORS_ORIGIN=https://your-backend.onrender.com,https://your-frontend-domain.vercel.app,http://localhost:5173

# Logging
LOG_LEVEL=info

# Security
BCRYPT_ROUNDS=10

# Retention policy (days)
LOG_RETENTION_DAYS=90
AUDIT_RETENTION_DAYS=365
